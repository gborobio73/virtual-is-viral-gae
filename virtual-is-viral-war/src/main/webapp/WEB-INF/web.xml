<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>work</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.WorkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>work</servlet-name>
        <url-pattern>/work</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.DriveUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
	<servlet>
        <servlet-name>Serve</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.ServeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Serve</servlet-name>
        <url-pattern>/serve</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.leeloo.viv.rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

	<!-- Google Drive -->
	<servlet>
   		<servlet-name>TestDrive</servlet-name>
   		<servlet-class>com.leeloo.viv.servlet.TestDrive</servlet-class>
 	</servlet> 
	<servlet-mapping>
   		<servlet-name>TestDrive</servlet-name>
   		<url-pattern>/testdrive</url-pattern>
 	</servlet-mapping>	
	<servlet>
   		<servlet-name>DriveSample</servlet-name>
   		<servlet-class> com.leeloo.viv.servlet.DriveAppEngineSample</servlet-class>
 	</servlet> 
	<servlet-mapping>
   		<servlet-name>DriveSample</servlet-name>
   		<url-pattern>/drivesample</url-pattern>
 	</servlet-mapping>
	<servlet>
   		<servlet-name>OAuthCodeCallbackHandlerServlet</servlet-name>
   		<servlet-class> com.leeloo.viv.servlet.DriveAppEngineCallbackSample</servlet-class>
 	</servlet> 
	<servlet-mapping>
   		<servlet-name>OAuthCodeCallbackHandlerServlet</servlet-name>
   		<url-pattern>/oauth2callback</url-pattern>
 	</servlet-mapping>
