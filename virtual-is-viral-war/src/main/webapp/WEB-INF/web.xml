		<servlet-name>ViewDriveFile</servlet-name>
		<servlet-class>com.leeloo.viv.servlet.drive.ViewDriveFile</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewDriveFile</servlet-name>
		<url-pattern>/viewdrivefile</url-pattern>
	</servlet-mapping-->
	
	<servlet>
        <servlet-name>Sample</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.DriveServletSample</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sample</servlet-name>
        <url-pattern>/sample</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CallBack</servlet-name>
        <servlet-class>com.leeloo.viv.servlet.DriveServletCallbackSample</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CallBack</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>
	
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
